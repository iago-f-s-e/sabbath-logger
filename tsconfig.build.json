{
  "extends": "./tsconfig",
  "compilerOptions": {
    "strict": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "paths": {
      "@core/*": ["lib/core/*"],
      "@infra/*": ["lib/infra/*"]
    }
  },
  "exclude": ["**/*.test.ts", "fixtures", "node_modules", "src/examples"]
}